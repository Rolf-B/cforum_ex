<ol class="answers">
  <%= for msg <- @messages do %>
    <li>
      <div class="posting-nested cf-thread-message h-entry <%= message_classes(@conn, msg, @thread, @message.message_id == msg.message_id, :nested) %>">
        <%= render "message.html", message_assigns(assigns, %{message: msg}) %>
      </div>

      <%= if Helpers.present?(msg.messages), do: render("answers-nested.html", Map.merge(assigns, %{messages: msg.messages})) %>
    </li>
  <% end %>
</ol>
